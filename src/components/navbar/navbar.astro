---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import Icon from "astro-icon";
const { default: logo } = await import(`assets/hexadigi-logo.svg?raw`);

const menuitems = [
  {
    title: "Works",
    path: "/works",
  },
  {
    title: "About us",
    path: "/about",
  },
];
---

<div class="border-b-2 fixed w-screen bg-white border-black z-10">
  <Container>
    <header class="flex flex-col lg:flex-row justify-between items-center py-5">
      <Astronav>
        <div class="flex w-full lg:w-auto items-center justify-between">
          <div class="w-48">
            <a href="/" aria-label="Hexadigi home page" class="text-lg">
              <Fragment set:html={logo} />
            </a>
          </div>
          <div class="block lg:hidden">
            <MenuIcon class="w-4 h-4 text-gray-800" />
          </div>
        </div>
        <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
          <ul class="flex flex-col lg:flex-row lg:gap-3">
            {
              menuitems.map((item, index) => (
                <li>
                  <a
                    href={item.path}
                    class="flex lg:px-3 py-2 text-gray-600 hover:text-gray-900">
                    {item.title}
                  </a>
                </li>
              ))
            }
            <li class="lg:flex items-center gap-4">
              <Link
                href="/contact"
                size="md"
                class="flex gap-1 items-center justify-center">
                Contact us <Icon
                  class="text-white w-5 h-5"
                  name="bx:bx-right-arrow-alt"
                />
              </Link>
            </li>
          </ul>
        </MenuItems>
      </Astronav>
    </header>
  </Container>
</div>
